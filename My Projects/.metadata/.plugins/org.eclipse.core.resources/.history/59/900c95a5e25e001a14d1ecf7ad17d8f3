package view;

import javax.swing.*;
import java.awt.*;

public class PlayerScorePanel extends JPanel {

	public PlayerScorePanel() {
		setLayout(new BoxLayout(this, BoxLayout.Y_AXIS));
		HintButton hntButton = new HintButton();
		
		//panel with labels of players and their scores
		JPanel playerPanel = new JPanel();
		playerPanel.setLayout(null);
		playerPanel.setLocation(10,0);
		playerPanel.setSize(400,50);
		add(playerPanel);
		
		// player labels
		JLabel playerOneLbl = new JLabel("Player 1");
		playerOneLbl.setLocation(0,0);
		playerOneLbl.setSize(100,30);
		playerOneLbl.setHorizontalAlignment(0);
		playerOneLbl.setForeground(Color.red);
		playerPanel.add(playerOneLbl);
		JLabel playerTwoLbl = new JLabel("Player 2");
		playerTwoLbl.setLocation(120,0);
		playerTwoLbl.setSize(100,30);
		playerTwoLbl.setHorizontalAlignment(0);
		playerTwoLbl.setForeground(Color.blue);
		playerPanel.add(playerTwoLbl);
		JLabel playerThreeLbl = new JLabel("Player 3");
		playerThreeLbl.setLocation(240,0);
		playerThreeLbl.setSize(100,30);
		playerThreeLbl.setHorizontalAlignment(0);
		playerThreeLbl.setForeground(Color.green);
		playerPanel.add(playerThreeLbl);
		JLabel playerFourLbl = new JLabel("Player 4");
		playerFourLbl.setLocation(360,0);
		playerFourLbl.setSize(100,30);
		playerFourLbl.setHorizontalAlignment(0);
		playerFourLbl.setForeground(Color.yellow);
		playerPanel.add(playerFourLbl);
		
		//player scores
		JTextField playerOneScore = new JTextField();
		JTextField playerTwoScore = new JTextField();
		JTextField playerThreeScore = new JTextField();
		JTextField playerFourScore = new JTextField();
	}

}
